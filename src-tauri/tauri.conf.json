{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bonfire",
  "version": "0.1.0",
  "identifier": "cafe.bonfire.desktop",
  "build": {
    "frontendDist": "../assets/static/tauri",
    "beforeDevCommand": "cd assets/static/tauri && yarn install --immutable-cache && yarn build",
    "beforeBuildCommand": "cd assets/static/tauri && yarn install --immutable-cache && yarn build && rm -rf node_modules assets/ap_c2s_client/js/node_modules"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": {
        "default-src": "'self' https:",
        "script-src": "'self' 'unsafe-inline' https: local:",
        "connect-src": "'self' ipc: http://ipc.localhost https: local:",
        "worker-src": "'self' blob: local:",
        "img-src": "'self' https: local: data:",
        "style-src": "'self' 'unsafe-inline' https:"
      },
      "dangerousDisableAssetCspModification": true,
      "headers": {
        "Access-Control-Expose-Headers": "Tauri-Custom-Header",
        "Tauri-Custom-Header": {
          "serveo-skip-browser-warning": "true"
        }
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$RESOURCE/**"
        ]
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["bonfire", "ap-mls"]
      }
    },
    "bonfire": {
      "known_domains": ["bonfire.cafe", "campground.bonfire.cafe", "playground.bonfire.cafe"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
    ],
    "macOS": {
      "signingIdentity": "-"
    },
    "icon": [
      "../assets/static/pwa/32x32.png",
      "../assets/static/pwa/128x128.png",
      "../assets/static/pwa/128x128@2x.png",
      "../assets/static/pwa/icon.icns",
      "../assets/static/pwa/icon.ico"
    ]
  }
}
